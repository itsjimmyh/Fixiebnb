<section
  style="background-image:url('../images/splash.png');">
  <%= render partial: "layouts/header" %>

  <article class="col-xs-6 col-xs-offset-3">
    <%= render partial: "layouts/flasherrors" %>
  </article>

<div class="col-xs-6 col-xs-offset-3">

  <div class="form-group" id="new-session-user">
    <form action="/session" method="post">
      <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">

      <!-- <label for="user_username" id="username">Username</label> -->
      <input
        type="hidden"
        name="user[username]"
        id="user_username"
        class="text-lowercase form-control text-center"
        placeholder="username"
        value="username"
        onclick="this.value= ''">

      <!-- <label for="user_password" id="password">Password</label> -->
      <input
        type="hidden"
        name="user[password]"
        id="user_password"
        class="form-control text-center"
        placeholder="password"
        value="123456"
        onclick="this.value= ''">

      <!-- <input type="submit" value="Sign In!" class="btn btn-primary col-xs-12" id="static-sign-in"> -->
      <input type="submit" value="Guest Login!" class="btn btn-success col-xs-6 col-xs-offset-3">

    </form>
  </div>
</div>
</section>

<%= render partial: "layouts/footer" %>
